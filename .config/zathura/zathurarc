map <C-->                       zoom out
map <C-=>                       zoom in

# dark theme
set statusbar-fg                "#ffffff"
set statusbar-bg                "#000000"
set recolor-lightcolor          "#000100" 
set recolor-darkcolor           "#ffffff" 

# dark mode by default
set recolor                     true

# copy selected items into clipboard instead of primary
set selection-clipboard clipboard

set font "VictorMono bold 11"
