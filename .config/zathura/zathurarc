map <C-->                       zoom out
map <C-=>                       zoom in

# nord theme 
set statusbar-bg                "#ffffff"
set statusbar-fg                "#000000"
set recolor-lightcolor          "#000100" 
set recolor-darkcolor           "#ffffff" 

# dark mode by default
set recolor                     true

# copy selected items into clipboard instead of primary
set selection-clipboard clipboard
